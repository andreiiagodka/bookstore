%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to t('layout.home'), root_path, class: 'navbar-link'
          %li
            = link_to t('layout.shop'), books_path, class: 'navbar-link'
        - if user_signed_in?
          %li
            = link_to t('layout.orders'), orders_path, class: 'navbar-link'
          %li
            = link_to t('layout.settings'), user_path(current_user), class: 'navbar-link'
      .col-sm-3
        %p.general-nav-mail
          = t('layout.email')
        %p.general-nav-number
          = t('layout.phone')
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-instagram{'aria-hidden': "true"}
