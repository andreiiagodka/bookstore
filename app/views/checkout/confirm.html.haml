%main.container.general-main-wrap
  = render 'checkout/partials/header'
  .row.mb-20
    = render 'checkout/partials/confirm/address_information', type: 'shipping', address: current_order.addresses.shipping.first.decorate
    = render 'checkout/partials/confirm/address_information', type: 'billing', address: current_order.addresses.billing.first.decorate
    = render 'checkout/partials/confirm/delivery_information', delivery: current_order.delivery
    = render 'checkout/partials/confirm/credit_card_information', credit_card: current_order.credit_card.decorate
  .hidden-xs.divider-lg.pt-20
    = render 'checkout/partials/products_list', order: current_order
    .general-text-align
      = render 'checkout/partials/order_summary', order: current_order
  = simple_form_for current_order, url: wizard_path, method: :put do |f|
    = f.button :submit, t('button.place_order'), class: 'btn btn-default center-block mb-20'
