%main.container
  = render 'checkout/partials/header'
  = simple_form_for current_order, url: wizard_path, method: :put, validate: true do |f|
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle
            = t('address.cast.billing')
          %p.general-info-text
            = t('address.all_fields_requried')
        .col-md-5.col-md-offset-1
          %h3.general-subtitle
            = t('address.cast.shipping')
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle
            = t('address.cast.billing')
          %p.general-info-text
            = t('address.all_fields_requried')
        = f.simple_fields_for :billing, f.object.addresses.billing.first_or_initialize do |form|
          = render 'addresses/partials/form', f: form, cast: :billing
      .col-md-5.col-md-offset-1.mb-60{id: 'shipping_address_form'}
        = f.simple_fields_for :shipping, f.object.addresses.shipping.first_or_initialize do |form|
          = render 'addresses/partials/form', f: form, cast: :shipping
        .form-group.checkbox
          %label.checkbox-label
            = check_box_tag 'use_billing', true, false, id: 'use_billing', class: 'checkbox-input', hidden: true
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text
              = t('address.use_billing')
    .general-text-align.mb-60
      %p.in-gold-500.font-18
        = t('order.summary.order_summary')
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Item Total:
          %td
            %p.font-16 €117.69
        %tr
          %td
            %p.font-16 Order Total:
          %td
            %p.font-16 €117.69
      = f.button :submit, 'Save and Continue', class: 'btn center-block mb-20'
