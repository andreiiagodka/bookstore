%main.container
 = link_to @page_presenter.previous_url, class: 'general-back-link' do
  %i.fa.fa-long-arrow-left.mr-15
  = t('book.back')
 .row
  .col-sm-6
   .product-gallery
    .mb-20
     %img.img-responsive
      = book.cover_image(:main)
    .images.clearfix
     - (0...book.images.count).each do |image_index|
      = image_tag book.image(image_index), class: 'img-link'
  .col-sm-6
   %h1.mt-res-0
    = book.name
   %p.lead.small
    = book.authors_joined_by_comma
   .row
    = simple_form_for(current_order.order_books.new, remote: true, method: :post) do |f|
     .col-xs-12.col-md-4
      %p.h1.in-gold-500.mt-10
       = t('book.price', price: book.price)
     .col-xs-5.col-md-3
      .input-group.general-position
       %a.input-link.btn-minus-js
        %i.fa.fa-minus.line-height-40
       = f.number_field :quantity, value: 1, class: 'form-control quantity-input book-quantity-js'
       = f.hidden_field :book_id, value: book.id
       %a.input-link.btn-plus-js
        %i.fa.fa-plus.line-height-40
     .col-xs-7.col-md-5
      %button.btn.btn-default.pull-right.general-position
       = t('btn.add_to_cart')
   .row
    .general-info-wrap.divider-lg
     %p
      = t('book.description')
     %p.lead.small.line-height-2.description-js
      = book.medium_description
      %span.dots-js
       = t('book.dots')
      %span.end-of-description-js{style: 'display:none'}
       = book.end_of_description
      %button.btn-link.in-gold-500.ml-10.read-more-js
       = t('book.read_more')
    .general-info-wrap.divider-lg
     .clearfix
      %p.pull-left
       = t('book.publication_year')
      %p.lead.small.pull-right
       = book.publication_year
    .general-info-wrap.divider-lg
     .clearfix
      %p.pull-left
       = t('book.dimensions')
      %p.lead.small.pull-right
       = t('book.dimensions_params', height: book.height, width: book.width, depth: book.depth)
    .general-info-wrap.divider-lg
     .clearfix
      %p.pull-left
       = t('book.material')
      %p.lead.small.pull-right
       = book.material
 = render 'reviews/book_reviews'
