%main.container
  %h1.general-title-margin Settings
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}
        = t('user.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}
        = t('user.privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      %form
        .hidden-xs.hidden-sm
          .row
            .col-md-5
              %h3.general-subtitle.mt-0
                = t('address.cast.billing')
            .col-md-5.col-md-offset-1
              %h3.general-subtitle.mt-0
                = t('address.cast.shipping')
        .row
          .col-md-5.mb-40
            = simple_form_for @user.addresses.billing.first do |form|
              .visible-xs.visible-sm
                %h3.general-subtitle.mt-0
                = t('address.cast.billing')
              = render 'users/partials/address_block', f: form, cast: :billing
              = form.button :submit, t('button.save'), class:"btn btn-default btn"
          .col-md-5.col-md-offset-1.mb-25
            = simple_form_for @user.addresses.shipping.first do |form|
              .visible-xs.visible-sm
                %h3.general-subtitle.mt-0
                = t('address.cast.shipping')
              = render 'users/partials/address_block', f: form, cast: :shipping
              = form.button :submit, t('button.save'), class:"btn btn-default btn"
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        = render 'users/partials/email_block'
        = render 'users/partials/password_block'
        = render 'users/partials/remove_account_block'
