%main.container.general-main-wrap
  = render 'checkout/partials/header'
  .text-center.mb-40
    %h3.general-subtitle
      = t('checkout.complete.thankful_message')
    %p.fw-300
      = t('checkout.complete.sent_email_message', email: current_user.email)
  .row.mb-20
    = render 'checkout/partials/confirm/address_information', type: 'billing', address: current_user.orders.last.addresses.billing.first.decorate
    .col-sm-9.hidden-xs.text-right
      %p.general-order-number.mb-0
        = t('checkout.complete.order_number', number: current_user.orders.last.number)
      %p.general-address.mb-30
        = current_user.orders.last.decorate.creation_date
  .hidden-xs.divider-lg.pt-20
    = render 'checkout/partials/products_list', order: current_user.orders.last.decorate
    .general-text-align
      = render 'checkout/partials/order_summary', order: current_user.orders.last.decorate
  .text-center
    = link_to t('button.back_to_store'), root_path, class: 'btn btn-default mb-20'
