.general-cart-item.divider-lg-bottom
  = link_to order_book_path(order_book), remote: true, method: :delete, class: 'close general-cart-close' do
    %span{'aria-hidden': "true"} &times;
  .general-img-wrap-table
    %img.cart-img-shadow
      = order_book.book.decorate.cover_image(:cart)
  %p.title
    = order_book.book.name
  %table.table
    %tr
      %td
        %span.in-grey-600
          = t('cart.price')
      %td
        %span.font-16.in-gold-500
          = t('book.price', price: order_book.book.price)
    %tr
      %td.vertical-middle
        %span.in-grey-600
          = t('cart.quantity')
      %td
        = render partial: 'orders/partials/quantity_field', locals: {quantity: order_book.quantity}
    %tr
      %td
        %span.in-grey-600
          = t('cart.subtotal')
      %td
        %span.font-16.in-gold-500
          = t('book.price', price: order_book.subtotal_price)
