%main.container
  = render 'checkout/partials/header'
  = simple_form_for @checkout.order, url: wizard_path, method: :put, validate: true, defaults: { input_html: { class: "form-control" }, wrapper_html: { class: 'form-group' }} do |f|
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle
            = t('address.cast.billing')
          %p.general-info-text
            = t('address.all_fields_required')
        .col-md-5.col-md-offset-1
          %h3.general-subtitle
            = t('address.cast.shipping')
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle
            = t('address.cast.billing')
          %p.general-info-text
            = t('address.all_fields_required')
        = f.simple_fields_for :billing, @checkout.billing_address do |form|
          = render 'addresses/partials/form_fields', f: form, cast: :billing
      .col-md-5.col-md-offset-1.mb-60{id: 'shipping_address_form'}
        = f.simple_fields_for :shipping, @checkout.shipping_address do |form|
          = render 'addresses/partials/form_fields', f: form, cast: :shipping
        .form-group.checkbox
          %label.checkbox-label
            = check_box_tag 'use_billing', true, false, id: 'use_billing', class: 'checkbox-input', hidden: true
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text
              = t('address.use_billing')
    .general-text-align
      = render 'checkout/partials/order_summary', order: @checkout.order
      = f.button :submit, t('button.save_and_continue'), class: 'btn btn-default center-block mb-20'
