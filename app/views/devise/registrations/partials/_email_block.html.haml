.col-sm-5
  %p.in-gold-500.font-18.mb-25
    = t('devise.subtitle.email')
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :patch, class: "general-form-md") do |f|
    .form-group.mb-35
      = f.label :email, t('devise.email'), class: 'control-label input-label'
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'email', placeholder: t('devise.email')
    .general-text-align
      = f.button :submit, t('button.save'), class: 'btn btn-default mb-35'
