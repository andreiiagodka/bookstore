%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to t('layout.home'), root_path, class: 'navbar-link'
          %li
            %a.nav-link{href: "#"}
              = t('layout.shop')
        - if user_signed_in?
          %li
            %a.nav-link{href: "#"}
              = t('layout.orders')
          %li
            %a.nav-link{href: "#"}
              = t('layout.settings')
      .col-sm-3
        %p.general-nav-mail
          = t('layout.email')
        %p.general-nav-number
          = t('layout.phone')
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-instagram{'aria-hidden': "true"}
%script{src: "https://use.fontawesome.com/67602d7308.js"}
%script{src: "../../javascripts/jquery.js"}
%script{src: "../../javascripts/bootstrap.js"}
