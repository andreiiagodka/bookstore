%main.container.general-main-wrap
  = render 'checkout/partials/header'
  .row.mb-20
    = render 'checkout/partials/confirm/address_information', type: 'shipping', address: current_order.addresses.shipping.first.decorate
    = render 'checkout/partials/confirm/address_information', type: 'billing', address: current_order.addresses.billing.first.decorate
    = render 'checkout/partials/confirm/delivery_information', delivery: current_order.delivery
    = render 'checkout/partials/confirm/credit_card_information', credit_card: current_order.credit_card.decorate
    -# = render 'checkout/partials/confirm/mobile_cart_row', collection: current_order.order_books, as: :order_book
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600
              = t('order.cart.book')
          %th.col-method
          %th
            %span.in-grey-600
              = t('order.cart.price')
          %th
            %span.in-grey-600
              = t('order.cart.quantity')
          %th
            %span.in-grey-600
              = t('order.cart.subtotal')
      %tbody
        = render partial: 'checkout/partials/confirm/cart_row', collection: current_order.order_books, as: :order_book
    .general-text-align
      = render 'checkout/partials/order_summary'
  .text-center
    %button.btn.btn-default.mb-20
      = t('devise.place_order')
