%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('layout.project_title'), root_path, class: 'navbar-brand'
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t('layout.home'), root_path, class: 'navbar-brand'
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"}
              = t('layout.shop')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              - @categories.each do |category|
                %li
                  = link_to category.name, categories_path(id: category), css: 'collapse-link'
          - if user_signed_in?
            %li
              %a{href: "#"}
                = t('layout.my_account')
            %li
              %a{href: "#"}
                = t('layout.log_out')
          - else
            %li
              = link_to t('layout.log_in'), new_user_session_path
            %li
              = link_to t('layout.sign_in'), new_user_registration_path
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('layout.home'), root_path, class: 'navbar-brand'
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
              = t('layout.shop')
            %ul.dropdown-menu
              - @categories.each do |category|
                %li
                  = link_to category.name, categories_path(id: category)
          - if user_signed_in?
            %li
              %a{href: "#"}
                = t('layout.my_account')
            %li
              %a{href: "#"}
                = t('layout.log_out')
          - else
            %li
              = link_to t('layout.log_in'), new_user_session_path
            %li
              = link_to t('layout.sign_in'), new_user_registration_path
