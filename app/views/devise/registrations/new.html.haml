%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign Up
    %a.general-login-icon{href: "#"}
      - if devise_mapping.omniauthable?
        - resource_class.omniauth_providers.each do |provider|
          = link_to omniauth_authorize_path(resource_name, provider) do
            %i.fa.fa-facebook-official.fa-lg
    %p.general-login-text or
  .general-form.field
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group.mb-30
        %label.control-label.input-label{for: "email"} Enter Email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'email', placeholder: "Enter Email"
      .form-group.mb-30
        %label.control-label.input-label{for: "password"} Password
        %br/
        = f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'password', placeholder: "Password"
      .form-group.mb-30
        %label.control-label.input-label{for: "confirm_password"} Confirm Password
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'passconfirm_passwordword', placeholder: "Confirm Password"
      .text-center
        .actions
          = f.submit 'Sign up', class: 'btn btn-default mb-20'
      .text-center
        %p.general-sign-text.text-center
        Do you have an account?
        = link_to "Sign in", new_session_path(resource_name), class: 'in-gold-500'
