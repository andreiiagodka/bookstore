= f.hidden_field :cast, value: cast
.form-group
  = f.label :first_name, t('address.first_name'), class: 'control-label input-label'
  = f.text_field :first_name, class: 'form-control', placeholder: t('address.first_name'), required: true
.form-group
  = f.label :last_name, t('address.last_name'), class: 'control-label input-label'
  = f.text_field :last_name, class: 'form-control', placeholder: t('address.last_name'), required: true
.form-group
  = f.label :country, t('address.country'), class: 'control-label input-label'
  = f.country_select :country, {}, class: 'form-control', required: true
.form-group
  = f.label :city, t('address.city'), class: 'control-label input-label'
  = f.text_field :city, class: 'form-control', placeholder: t('address.city'), required: true
.form-group
  = f.label :address, t('address.address'), class: 'control-label input-label'
  = f.text_field :address, class: 'form-control', placeholder: t('address.address'), required: true
.form-group
  = f.label :zip, t('address.zip'), class: 'control-label input-label'
  = f.text_field :zip, class: 'form-control', placeholder: t('address.zip'), required: true
.form-group.mb-60
  = f.label :phone, t('address.phone'), class: 'control-label input-label'
  = f.text_field :phone, class: 'form-control', placeholder: t('address.phone'), required: true
= f.button :submit, t('button.save'), class:"btn btn-default btn"
