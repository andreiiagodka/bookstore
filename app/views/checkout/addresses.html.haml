%main.container
  = render 'checkout/partials/header'
  .hidden-xs.hidden-sm
    .row
      .col-md-5
        %h3.general-subtitle
          = t('address.cast.billing')
        %p.general-info-text
          = t('address.all_fields_requried')
      .col-md-5.col-md-offset-1
        %h3.general-subtitle
          = t('address.cast.shipping')
  .row
    .col-md-5.mb-40
      .visible-xs.visible-sm
        %h3.general-subtitle
          = t('address.cast.billing')
        %p.general-info-text
          = t('address.all_fields_requried')
      = simple_form_for current_user.addresses.billing.first_or_initialize, validate: true do |form|
        = render 'addresses/partials/form', f: form, cast: :billing
    .col-md-5.col-md-offset-1.mb-60
      = simple_form_for current_user.addresses.shipping.first_or_initialize, validate: true do |form|
        = render 'addresses/partials/form', f: form, cast: :shipping
      .form-group.checkbox
        %label.checkbox-label
          %input.checkbox-input{type: "checkbox", hidden: "true"}
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text
            = t('address.use_billing')
  .general-text-align.mb-60
    %p.in-gold-500.font-18
      = t('order.summary.order_summary')
    %table.general-summary-table
      %tr
        %td
          %p.font-16 Item Total:
        %td
          %p.font-16 €117.69
      %tr
        %td
          %p.font-16 Order Total:
        %td
          %p.font-16 €117.69
    %button.btn.disabled.center-block.mb-20 Save and Continue
